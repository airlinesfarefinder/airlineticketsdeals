    <script>
        // Trip type functionality
        function show_date(tripType) {
            const returnDateField = document.getElementById('datepicker2');
            if (tripType === 'oneway') {
                returnDateField.disabled = true;
                returnDateField.value = '';
                returnDateField.removeAttribute('required');
                // Disable the return date picker
                if (window.returnDatePicker) {
                    window.returnDatePicker.destroy();
                }
            } else {
                returnDateField.disabled = false;
                returnDateField.setAttribute('required', 'required');
                // Reinitialize the return date picker
                if (!window.returnDatePicker || !window.returnDatePicker.isOpen) {
                    initializeReturnDatePicker();
                }
            }
        }

        // Travelers dropdown functionality
        document.getElementById('btm_clk').addEventListener('click', function() {
            const dropdown = document.getElementById('travelers-dropdown');
            dropdown.classList.toggle('active');
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('travelers-dropdown');
            const input = document.getElementById('btm_clk');
            if (!dropdown.contains(event.target) && event.target !== input) {
                dropdown.classList.remove('active');
            }
        });

        // Counter functions - Fixed to prevent event bubbling
        function increase_adult_rt() {
            event.preventDefault();
            event.stopPropagation();
            const counter = document.getElementById('AdultsRT');
            const hidden = document.getElementById('adults-hidden');
            let value = parseInt(counter.textContent);
            if (value < 9) {
                value++;
                counter.textContent = value;
                hidden.value = value;
                updateTravelersDisplay();
            }
        }

        function decrease_adult_rt() {
            event.preventDefault();
            event.stopPropagation();
            const counter = document.getElementById('AdultsRT');
            const hidden = document.getElementById('adults-hidden');
            let value = parseInt(counter.textContent);
            if (value > 1) {
                value--;
                counter.textContent = value;
                hidden.value = value;
                updateTravelersDisplay();
            }
        }

        function increase_child_rt() {
            event.preventDefault();
            event.stopPropagation();
            const counter = document.getElementById('ChildrenRT');
            const hidden = document.getElementById('children-hidden');
            let value = parseInt(counter.textContent);
            if (value < 9) {
                value++;
                counter.textContent = value;
                hidden.value = value;
                updateTravelersDisplay();
            }
        }

        function decrease_child_rt() {
            event.preventDefault();
            event.stopPropagation();
            const counter = document.getElementById('ChildrenRT');
            const hidden = document.getElementById('children-hidden');
            let value = parseInt(counter.textContent);
            if (value > 0) {
                value--;
                counter.textContent = value;
                hidden.value = value;
                updateTravelersDisplay();
            }
        }

        function increase_infant_rt() {
            event.preventDefault();
            event.stopPropagation();
            const counter = document.getElementById('InfantsRT');
            const hidden = document.getElementById('infants-hidden');
            let value = parseInt(counter.textContent);
            if (value < 9) {
                value++;
                counter.textContent = value;
                hidden.value = value;
                updateTravelersDisplay();
            }
        }

        function decrease_infant_rt() {
            event.preventDefault();
            event.stopPropagation();
            const counter = document.getElementById('InfantsRT');
            const hidden = document.getElementById('infants-hidden');
            let value = parseInt(counter.textContent);
            if (value > 0) {
                value--;
                counter.textContent = value;
                hidden.value = value;
                updateTravelersDisplay();
            }
        }

        function updateTravelersDisplay() {
            const adults = parseInt(document.getElementById('AdultsRT').textContent);
            const children = parseInt(document.getElementById('ChildrenRT').textContent);
            const infants = parseInt(document.getElementById('InfantsRT').textContent);
            const classType = document.getElementById('classType').options[document.getElementById('classType').selectedIndex].text;
            
            const total = adults + children + infants;
            const passengerText = total === 1 ? 'Passenger' : 'Passengers';
            
            document.getElementById('btm_clk').value = `${total} ${passengerText}, ${classType}`;
        }

        function all_pesenger() {
            updateTravelersDisplay();
            document.getElementById('travelers-dropdown').classList.remove('active');
        }

        // Class change handler
        document.getElementById('classType').addEventListener('change', updateTravelersDisplay);

        // Placeholder functions for form validation and input clearing
        function first_form() {
            // Add your form validation logic here
            return true;
        }

        function clearInput() {
            // Add your input clearing logic here
        }

        function clearInput2() {
            // Add your input clearing logic here
        }

        // Get current month range
        function getCurrentMonthRange() {
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            const lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0);
            return { firstDay, lastDay };
        }

        // Initialize return date picker separately
        function initializeReturnDatePicker() {
            const { firstDay, lastDay } = getCurrentMonthRange();
            window.returnDatePicker = flatpickr("#datepicker2", {
                dateFormat: "Y-m-d",
                minDate: document.getElementById('datepicker').value || firstDay,
                maxDate: lastDay,
                onChange: function(selectedDates, dateStr, instance) {
                    document.getElementById('retDt').value = dateStr;
                }
            });
        }

        // Initialize date pickers with Flatpickr - Limited to current month only
        function initializeDatePickers() {
            const { firstDay, lastDay } = getCurrentMonthRange();
            
            const departureDate = flatpickr("#datepicker", {
                dateFormat: "Y-m-d",
                minDate: firstDay,
                maxDate: lastDay,
                onChange: function(selectedDates, dateStr, instance) {
                    document.getElementById('depDt').value = dateStr;
                    // Set minimum return date to departure date
                    if (window.returnDatePicker) {
                        window.returnDatePicker.set('minDate', dateStr);
                    }
                }
            });

            initializeReturnDatePicker();

            // Store references for later use
            window.departureDatePicker = departureDate;
        }

        // Initialize date pickers when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeDatePickers();
        });
    </script>




