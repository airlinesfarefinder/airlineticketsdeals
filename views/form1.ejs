<script>
  function changeCount(type, delta) {
    const input = document.getElementById(type);
    let value = parseInt(input.value);
    value = isNaN(value) ? 0 : value + delta;
    if (value < 0) value = 0;
    if (type === 'adults' && value === 0) value = 1; // Always have at least 1 adult
    input.value = value;
  }

  function updateTravellerSummary() {
    const adults = parseInt(document.getElementById("adults").value) || 0;
    const children = parseInt(document.getElementById("children").value) || 0;
    const infants = parseInt(document.getElementById("infants").value) || 0;
    const total = adults + children + infants;

    const classType = document.getElementById("classType").value;
    const passengerText = `${total} Passenger${total > 1 ? 's' : ''}, ${classType}`;
    document.getElementById("btm_clk").value = passengerText;

    document.getElementById("travelers-dropdown").style.display = "none";
  }
